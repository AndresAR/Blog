<div class="demo-card-wide mdl-card mdl-shadow--2dp">
	<div class="mdl-card__title">
		<h2 class="mdl-card__title-text">Nuevo Articulo</h2>
	</div>
	<div class="mdl-card__supporting-text">
		<%= form_for :article do |f| %>
			<div class="mdl-textfield mdl-js-textfield">
				<%= f.label :title, class: "mdl-textfield__label"  %>
				<%= f.text_field :title, class: "mdl-textfield__input"  %>
	</div><br />

	<div class="mdl-textfield mdl-js-textfield">
		<%= f.label :text, class: "mdl-textfield__label" %>
		<%= f.text_area :text, class: "mdl-textfield__input"%>
	</div>
	</div>
	<div class="mdl-card__actions mdl-card--border">
		<%= f.submit class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" %>
		<% end %>
	</div>
</div>